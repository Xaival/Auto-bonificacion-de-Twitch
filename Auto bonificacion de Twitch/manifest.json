{
	"manifest_version": 3,
	"version": "1.0",
	"name": "Auto bonificación de Twitch",
	"description": "Recolecta los puntos de canales de Twitch automáticamente",
	"author": "Xaival",
	"content_scripts": [{
		"matches": ["https://www.twitch.tv/*"],
		"js": ["content_scripts.js"],
		"css": ["style.css"]
	}],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_icon": {
			"16": "icons-active/icon16.png",
			"32": "icons-active/icon32.png",
			"48": "icons-active/icon48.png",
			"128": "icons-active/icon128.png"
		}
	}
}